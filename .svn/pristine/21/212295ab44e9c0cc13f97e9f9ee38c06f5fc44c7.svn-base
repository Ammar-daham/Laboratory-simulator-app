					   //jonosta poisto
				   	 if(jonossa[1]>0) {
			   	   			kontrolleri.piilotaAsiakas(1, jonossa[1]--);
			   	   			}
				   	   	a.raportti(); 
				   	   	keskiarvo = a.getkeskiarvo();
				   	   	c1++;
				   	   	break;
			    //Rong jono 2
			case DEP3: a = palvelupisteet[2].otaJonosta();
